<Window x:Class="Ferreteria_Proyecto_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:views="clr-namespace:Ferreteria_Proyecto_WPF.Views"
        Title="Ferretería - Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="#F8F8F8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#1B2A41" Grid.Column="0" Grid.RowSpan="2">
            <!-- LOGO -->

            <!-- TÍTULO DEL PROYECTO -->
            <!-- LOGO -->
            <Image Source="/Views/Resources/Logo.png"
           Width="172" Height="168" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"
           />

            <!-- BOTONES DEL MENÚ -->

            <Button Style="{StaticResource SidebarButtonStyle}" Click="Dashboard_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="Home" Width="18" Margin="10 0 15 0"/>
                    <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource SidebarButtonStyle}" Click="Clientes_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="Users" Width="18" Margin="10 0 15 0"/>
                    <TextBlock Text="Clientes" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource SidebarButtonStyle}" Click="Productos_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="BoxOpen" Width="18" Margin="10 0 15 0"/>
                    <TextBlock Text="Productos" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource SidebarButtonStyle}" Click="Facturacion_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="FileInvoiceDollar" Width="18" Margin="10 0 15 0"/>
                    <TextBlock Text="Facturación" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource SidebarButtonStyle}" Click="Reportes_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="ChartLine" Width="18" Margin="10 0 15 0"/>
                    <TextBlock Text="Reportes" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Separator Margin="10"/>

            <Button Style="{StaticResource LogoutButtonStyle}" Click="CerrarSesion_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:IconBlock Icon="SignOutAlt" Width="18" Margin="10 0 15 0"/>
                    <TextBlock Text="Cerrar Sesión" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- ENCABEZADO SUPERIOR -->
        <Border Grid.Column="1" Grid.Row="0" Background="White" Height="60" BorderBrush="#EEE" BorderThickness="0 0 0 1">
            <DockPanel LastChildFill="True" Margin="20,0">
                <TextBlock x:Name="TituloModulo"
                   Text="Dashboard"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   VerticalAlignment="Center" />

                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center">
                    <TextBlock Text="Bienvenido, Usuario Admin"
                       VerticalAlignment="Center"
                       Margin="0 0 10 0"/>
                    <Ellipse Width="35" Height="35" Fill="#D6EAF8"/>
                </StackPanel>
            </DockPanel>
        </Border>


        <!-- CONTENIDO PRINCIPAL -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Grid.Row="1" />
    </Grid>
</Window>
