<UserControl x:Class="Ferreteria_Proyecto_WPF.Views.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Ferreteria_Proyecto_WPF.ViewModels"
             FontFamily="Poppins">

    <UserControl.DataContext>
        <vm:ClientesViewModel />
    </UserControl.DataContext>

    <!-- Fondo general usando tema -->
    <Grid Background="{DynamicResource PrimaryBackgroundColor}" Margin="10">
        <!-- Tarjeta principal como el Home -->
        <Border CornerRadius="8"
                Background="{DynamicResource SecundaryBackgroundColor}"
                Padding="14">

            <DockPanel LastChildFill="True">

                <!-- Título + subtítulo -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Gestión de Clientes"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               FontSize="24"
                               FontWeight="Bold"/>
                    <TextBlock Text="Administra clientes, contactos y direcciones."
                               Foreground="{DynamicResource SecundaryTextColor}"
                               Opacity="0.85"
                               FontSize="12"/>
                </StackPanel>

                <!-- Barra de acciones -->
                <Border DockPanel.Dock="Top"
                        Background="{DynamicResource TertiaryBackgroundColor}"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Height="36"
                                 Margin="0,0,10,0"
                                 VerticalContentAlignment="Center"
                                 Foreground="{DynamicResource PrimaryTextColor}"
                                 Background="{DynamicResource SecundaryBackgroundColor}"
                                 BorderBrush="{DynamicResource PrimaryBackgroundColor}"
                                 ToolTip="Buscar por nombre, cédula/RNC, teléfono o email"
                                 Text="{Binding Busqueda, UpdateSourceTrigger=PropertyChanged}"/>

                        <Button Grid.Column="1"
                                Content="Nuevo"
                                Style="{StaticResource ProButtonStyle}"
                                Command="{Binding AgregarCommand}"/>
                    </Grid>
                </Border>

                <!-- Tabla -->
                <DataGrid ItemsSource="{Binding ClientesFiltrados}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          RowHeight="38"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          Background="{DynamicResource SecundaryBackgroundColor}"
                          Foreground="{DynamicResource PrimaryTextColor}"
                          AlternatingRowBackground="{DynamicResource TertiaryBackgroundColor}">

                    <DataGrid.Resources>
                        <!-- Encabezado estilo Home -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource TertiaryBackgroundColor}"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBackgroundColor}"/>
                            <Setter Property="BorderThickness" Value="0 0 0 1"/>
                        </Style>

                        <!-- Filas hover/selección -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="{DynamicResource SecundaryBackgroundColor}"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource TertiaryBackgroundColor}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource TertiaryBackgroundColor}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"           Binding="{Binding ClienteId}"         Width="60"/>
                        <DataGridTextColumn Header="Nombre"       Binding="{Binding Nombre}"            Width="160"/>
                        <DataGridTextColumn Header="Apellido"     Binding="{Binding Apellido}"          Width="160"/>
                        <DataGridTextColumn Header="Cédula/RNC"   Binding="{Binding Cedula}"            Width="140"/>
                        <DataGridTextColumn Header="Email"        Binding="{Binding CorreoElectronico}" Width="220"/>
                        <DataGridTextColumn Header="Provincia"    Binding="{Binding ProvinciaNombre}"   Width="160"/>
                        <DataGridTextColumn Header="Ciudad"       Binding="{Binding CiudadNombre}"      Width="160"/>

                        <DataGridTemplateColumn Header="Acciones" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏"
                                                ToolTip="Editar"
                                                Width="34" Height="30" Margin="3,0"
                                                Background="{DynamicResource TertiaryBackgroundColor}"
                                                BorderBrush="{DynamicResource PrimaryBackgroundColor}"
                                                Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="🗑"
                                                ToolTip="Eliminar"
                                                Width="34" Height="30" Margin="3,0"
                                                Background="{DynamicResource TertiaryRedColor}"
                                                Foreground="{DynamicResource TertiaryWhiteColor}"
                                                BorderBrush="{DynamicResource SecundaryRedColor}"
                                                Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>
        </Border>
    </Grid>
</UserControl>
