<UserControl x:Class="Ferreteria_Proyecto_WPF.Views.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Ferreteria_Proyecto_WPF.ViewModels"
             FontFamily="Poppins">

    <!-- ViewModel -->
    <UserControl.DataContext>
        <vm:ClientesViewModel/>
    </UserControl.DataContext>

    <!-- Layout raíz -->
    <Grid Margin="12"
          Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Gestión de Clientes"
                   Margin="8,8,8,12"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryTextColor}"/>

        <!-- Card de contenido -->
        <Border Grid.Row="1"
                Background="{DynamicResource TertiaryBackgroundColor}"
                CornerRadius="10"
                BorderBrush="{DynamicResource TertiaryBackgroundColor}"
                BorderThickness="1"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Buscador + Botón Nuevo -->
                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                    <TextBox Width="320"
                             Height="36"
                             DockPanel.Dock="Left"
                             Margin="0,0,10,0"
                             Text="{Binding Busqueda, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"
                             FontSize="14"
                             Padding="8"
                             Background="{DynamicResource PrimaryBackgroundColor}"
                             Foreground="{DynamicResource PrimaryTextColor}"
                             BorderBrush="{DynamicResource SecundaryBackgroundColor}"
                             BorderThickness="1"
                             ToolTip="Buscar por nombre, cédula, email, ciudad o provincia"/>
                    <Button Content="➕ Nuevo Cliente"
                            Height="36"
                            Width="160"
                            Command="{Binding AgregarCommand}"
                            Cursor="Hand"
                            FontWeight="SemiBold"
                            Background="{DynamicResource SecundaryBlueColor}"
                            Foreground="{DynamicResource TertiaryWhiteColor}"
                            BorderThickness="0"/>
                </DockPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding ClientesFiltrados}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          RowHeight="40"
                          FontSize="14"
                          AlternationCount="2"
                          Background="{DynamicResource TertiaryBackgroundColor}"
                          Foreground="{DynamicResource PrimaryTextColor}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">

                    <!-- Estilos -->
                    <DataGrid.Resources>
                        <!-- Encabezados -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
                            <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource SecundaryBackgroundColor}"/>
                            <Setter Property="BorderThickness" Value="0 0 0 1"/>
                        </Style>

                        <!-- Filas -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="{DynamicResource TertiaryBackgroundColor}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <!-- Fila alterna -->
                                <Trigger Property="AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundColor}"/>
                                </Trigger>
                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource SecundaryBackgroundColor}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <!-- Celdas -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="8,0,8,0"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </DataGrid.Resources>

                    <!-- Columnas (actualizadas a los nuevos nombres) -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding IdCliente}" Width="60"/>
                        <DataGridTextColumn Header="Nombres" Binding="{Binding Nombres}" Width="160"/>
                        <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="160"/>
                        <DataGridTextColumn Header="Cédula/RNC" Binding="{Binding CedulaRNC}" Width="120"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="120"/>
                        <DataGridTextColumn Header="Provincia" Binding="{Binding Provincia}" Width="150"/>
                        <DataGridTextColumn Header="Ciudad" Binding="{Binding Ciudad}" Width="150"/>

                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Editar"
                                                Width="58" Height="28"
                                                Margin="0,0,6,0"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{DynamicResource TertiaryBlueColor}"
                                                Foreground="{DynamicResource TertiaryWhiteColor}"
                                                BorderThickness="0"/>
                                        <Button Content="Eliminar"
                                                Width="66" Height="28"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{DynamicResource TertiaryRedColor}"
                                                Foreground="{DynamicResource TertiaryWhiteColor}"
                                                BorderThickness="0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
