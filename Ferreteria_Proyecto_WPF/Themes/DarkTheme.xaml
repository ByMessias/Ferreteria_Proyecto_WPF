<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds (contenido / sidebar / cards) -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor"   Color="#0E0F13"/>
    <!-- canvas -->
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#1E1F24"/>
    <!-- sidebar -->
    <SolidColorBrush x:Key="TertiaryBackgroundColor"  Color="#2A2B31"/>
    <!-- tarjetas/hover -->

    <!-- Texto -->
    <SolidColorBrush x:Key="PrimaryTextColor"   Color="#EDEEF0"/>
    <!-- títulos -->
    <SolidColorBrush x:Key="SecundaryTextColor" Color="#D0D1D4"/>
    <!-- texto normal -->
    <SolidColorBrush x:Key="TertiaryTextColor"  Color="#A6A7AB"/>
    <!-- subtítulos/labels -->

    <!-- Verde (acento ChatGPT) -->
    <SolidColorBrush x:Key="PrimaryGreenColor"   Color="#10A37F"/>
    <SolidColorBrush x:Key="SecundaryGreenColor" Color="#2BB48F"/>
    <SolidColorBrush x:Key="TertiaryGreenColor"  Color="#0E6B56"/>
    <!-- para hovers oscuros -->

    <!-- Azules -->
    <SolidColorBrush x:Key="PrimaryBlueColor"   Color="#60A5FA"/>
    <SolidColorBrush x:Key="SecundaryBlueColor" Color="#3B82F6"/>
    <SolidColorBrush x:Key="TertiaryBlueColor"  Color="#1D4ED8"/>

    <!-- Estados -->
    <SolidColorBrush x:Key="PrimaryRedColor"    Color="#F87171"/>
    <SolidColorBrush x:Key="SecundaryRedColor"  Color="#EF4444"/>
    <SolidColorBrush x:Key="TertiaryRedColor"   Color="#7F1D1D"/>

    <SolidColorBrush x:Key="PrimaryOrangeColor"   Color="#FDBA74"/>
    <SolidColorBrush x:Key="SecundaryOrangeColor" Color="#FB923C"/>
    <SolidColorBrush x:Key="TertiaryOrangeColor"  Color="#7C2D12"/>

    <SolidColorBrush x:Key="PrimaryYellowColor"   Color="#FACC15"/>
    <SolidColorBrush x:Key="SecundaryYellowColor" Color="#EAB308"/>
    <SolidColorBrush x:Key="TertiaryYellowColor"  Color="#713F12"/>

    <SolidColorBrush x:Key="PrimaryTealColor"   Color="#2DD4BF"/>
    <SolidColorBrush x:Key="SecundaryTealColor" Color="#14B8A6"/>
    <SolidColorBrush x:Key="TertiaryTealColor"  Color="#115E59"/>

    <!-- Whites / Blacks de apoyo -->
    <SolidColorBrush x:Key="PrimaryWhiteColor"   Color="#EDEEF0"/>
    <SolidColorBrush x:Key="SecundaryWhiteColor" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="TertiaryWhiteColor"  Color="#FFFFFF"/>

    <SolidColorBrush x:Key="PrimaryBlackColor"   Color="#0B0C10"/>
    <SolidColorBrush x:Key="SecundaryBlackColor" Color="#111318"/>
    <SolidColorBrush x:Key="TertiaryBlackColor"  Color="#1C1F24"/>
</ResourceDictionary>
