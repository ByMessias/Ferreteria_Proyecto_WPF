<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Backgrounds (contenido / sidebar / cards/hover) -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor"   Color="#FFFFFFFF"/>
    <!-- canvas -->
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#F7F7F8FF"/>
    <!-- sidebar -->
    <SolidColorBrush x:Key="TertiaryBackgroundColor"  Color="#EDEEEFEE"/>
    <!-- bordes/hover -->

    <!-- Texto -->
    <SolidColorBrush x:Key="PrimaryTextColor"   Color="#0C0C0D"/>
    <!-- títulos -->
    <SolidColorBrush x:Key="SecundaryTextColor" Color="#3D3D3F"/>
    <!-- texto normal -->
    <SolidColorBrush x:Key="TertiaryTextColor"  Color="#6B6B6E"/>
    <!-- subtítulos/labels -->

    <!-- Verde (acento ChatGPT) -->
    <SolidColorBrush x:Key="PrimaryGreenColor"   Color="#10A37F"/>
    <SolidColorBrush x:Key="SecundaryGreenColor" Color="#15B893"/>
    <SolidColorBrush x:Key="TertiaryGreenColor"  Color="#CFF3E6"/>

    <!-- Azules (para links / infos) -->
    <SolidColorBrush x:Key="PrimaryBlueColor"   Color="#2563EB"/>
    <SolidColorBrush x:Key="SecundaryBlueColor" Color="#3B82F6"/>
    <SolidColorBrush x:Key="TertiaryBlueColor"  Color="#93C5FD"/>

    <!-- Estados -->
    <SolidColorBrush x:Key="PrimaryRedColor"    Color="#E53935"/>
    <SolidColorBrush x:Key="SecundaryRedColor"  Color="#EF5350"/>
    <SolidColorBrush x:Key="TertiaryRedColor"   Color="#FFCDD2"/>

    <SolidColorBrush x:Key="PrimaryOrangeColor"   Color="#F59E0B"/>
    <SolidColorBrush x:Key="SecundaryOrangeColor" Color="#FB923C"/>
    <SolidColorBrush x:Key="TertiaryOrangeColor"  Color="#FED7AA"/>

    <SolidColorBrush x:Key="PrimaryYellowColor"   Color="#E6B800"/>
    <SolidColorBrush x:Key="SecundaryYellowColor" Color="#FFCC00"/>
    <SolidColorBrush x:Key="TertiaryYellowColor"  Color="#FEF08A"/>

    <SolidColorBrush x:Key="PrimaryTealColor"   Color="#14B8A6"/>
    <SolidColorBrush x:Key="SecundaryTealColor" Color="#2DD4BF"/>
    <SolidColorBrush x:Key="TertiaryTealColor"  Color="#99F6E4"/>

    <!-- Whites / Blacks de apoyo -->
    <SolidColorBrush x:Key="PrimaryWhiteColor"   Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="SecundaryWhiteColor" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="TertiaryWhiteColor"  Color="#FFFFFF"/>

    <SolidColorBrush x:Key="PrimaryBlackColor"   Color="#0C0C0D"/>
    <SolidColorBrush x:Key="SecundaryBlackColor" Color="#111113"/>
    <SolidColorBrush x:Key="TertiaryBlackColor"  Color="#1B1C1F"/>
</ResourceDictionary>
